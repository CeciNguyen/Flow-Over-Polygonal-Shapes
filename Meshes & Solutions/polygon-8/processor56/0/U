FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (1 0 0);

boundaryField
{
    inlet
    {
        type            uniformFixedValue;
        uniformValue    constant (1 0 0);
        value           uniform (1 0 0);
    }
    outlet
    {
        type            pressureInletOutletVelocity;
        value           nonuniform 0();
    }
    polygon
    {
        type            fixedValue;
        value           nonuniform 0();
    }
    top
    {
        type            symmetryPlane;
    }
    bottom
    {
        type            symmetryPlane;
    }
    outside
    {
        type            zeroGradient;
    }
    procBoundary56to48
    {
        type            processor;
        value           uniform (1 0 0);
    }
    procBoundary56to49
    {
        type            processor;
        value           uniform (1 0 0);
    }
    procBoundary56to57
    {
        type            processor;
        value           uniform (1 0 0);
    }
}


